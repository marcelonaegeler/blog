col-11 = 91.53333333333%
col-12 = 100%


.row
, .column
	box-sizing: border-box;

.row:before
, .row:after
	content: " ";
	display: table;

.row:after
	clear: both;

.column
	position: relative;
	float: left;

.column + .column
	margin-left columnMargin

/*
 * Widths
 */
@media screen and (max-width: 480px)

	.column-small-12 + .column[class*="column-small-"]
	, .column[class*="column-small-"] + .column-small-12
		margin-left 0
	
	.column-small-1
		width col-1
	
	.column-small-2
		width col-2
	
	.column-small-3
		width col-3
	
	.column-small-4
		width col-4

	.column-small-5
		width col-5
	
	.column-small-6
		width col-6
	
	.column-small-7
		width col-7
	
	.column-small-8
		width col-8
	
	.column-small-9
		width col-9
	
	.column-small-10
		width col-10
	
	.column-small-11
		width col-11
	
	.column-small-12
		width col-12
	

@media screen and (min-width: 481px) and (max-width: 990px)
	
	.column[class*="column-small-"]:not([class*="column-mid-"])
		width 100%
	
	.column[class*="column-small-"]:not([class*="column-mid-"]) 
	+ .column[class*="column-small-"]:not([class*="column-mid-"])
		margin-left 0
	

	.column-mid-12 + .column[class*="column-mid-"]
	, .column[class*="column-mid-"] + .column-mid-12
		margin-left 0
	
	
	.column-mid-1
		width col-1

	.column-mid-2
		width col-2
	
	.column-mid-3
		width col-3
	
	.column-mid-4
		width col-4
	
	.column-mid-5
		width col-5
	
	.column-mid-6
		width col-6
	
	.column-mid-7
		width col-7
	
	.column-mid-8
		width col-8
	
	.column-mid-9
		width col-9
	
	.column-mid-10 
		width col-10
	
	.column-mid-11 
		width col-11
	
	.column-mid-12
		width col-12


@media screen and (min-width: 991px)
	.column[class*="column-small-"]:not([class*="column-large-"])
	, .column[class*="column-mid-"]:not([class*="column-large-"])
		width 100%
	
	.column[class*="column-small-"]:not([class*="column-large-"]) 
	+ .column[class*="column-small-"]:not([class*="column-large-"])
	,	.column[class*="column-mid-"]:not([class*="column-large-"]) 
	+	.column[class*="column-mid-"]:not([class*="column-large-"])
		margin-left 0

	.column-large-12 + .column[class*="column-large-"]
	, .column[class*="column-large-"] + .column-large-12
		margin-left 0

