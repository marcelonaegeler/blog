extends layout/base.jade

block style
	link(href="/build/stylesheets/theme.min.css", rel="stylesheet", type="text/css")

block script
	script(src="/build/javascripts/script.min.js")

block body
	include ./layout/header.jade

	div.content

		div.text-right
			a.btn.navigation(href="/")
				i.mdi.mdi-apps
				| All posts

		div#view-body
	

			if page === 'posts-all'
				a.navigation.btn.btn-floating(href="/admin/post")
					i.mdi.mdi-plus
						
				include ./pages/posts-all.jade
			
			else if page === 'posts-single'
				include ./pages/posts-single.jade

			else if page === 'works-all'
				a.navigation.btn.btn-floating(href="/admin/post")
					i.mdi.mdi-plus

				include ./pages/works-all.jade

			else if page === 'works-single'
				include ./pages/works-single.jade
