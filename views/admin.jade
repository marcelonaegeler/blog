extends layout/base.jade

block style
	link(href="/build/stylesheets/theme.min.css", rel="stylesheet", type="text/css")

block script
	script(src="/build/javascripts/script.min.js")

block body
	include ./layout/header.jade

	div.content

		div.text-right
			a.btn.navigation(href="/")
				i.mdi.mdi-apps
				| All posts

		div#view-body
	
			a.navigation.btn.btn-floating(href="/admin/post")
				i.mdi.mdi-plus

			for post in posts
				div.post
					if admin
						form(action="#{ post.link }", method="POST")
							h1.editable
								span.editable-content= (post.title || 'Title')
								textarea.form-input.input-editable(type="text", name="title", value="#{post.title}", placeholder="Title") 

							div.post-content.editable
								span.editable-content= (post.content || 'Your text goes here...')
								textarea.form-input.input-editable(name="content", placeholder="Your text goes here...")= post.content
